// .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: Configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-DCMAKE_BUILD_TYPE=Debug",  // Set build type to Debug
        "-B${workspaceFolder}/build/debug",  // Output directory for build
        "${workspaceFolder}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "CMake: Build",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build/debug",  // Build directory
        "--config",
        "Debug"  // Build configuration
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["CMake: Configure"]
    }
  ]
}
